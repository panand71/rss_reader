<h1>CNN Headlines</h1><h4>Updated <%=time_ago_in_words(@entries.first.created_at)%> ago</h4>

<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>



  <tbody>
    <% @entries.each do |entry| %>
    <tr>
      <td><%= link_to entry.title, entry.url, target: "_blank" %></td>
      <td><%= entry.created_at.to_date.to_formatted_s(:long) %></td>
      <% if current_user %>  
      <td><%= link_to 'Add to Favorites', entry %></td>
      <% end %>    
    </tr>
    <% end %>   
  </tbody>
</table>

<br>
